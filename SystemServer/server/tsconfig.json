{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "lib": ["dom", "esnext"],
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@commander/*": ["./*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*"],
}
